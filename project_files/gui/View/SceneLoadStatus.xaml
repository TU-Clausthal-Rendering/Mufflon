<Window x:Class="gui.View.SceneLoadStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gui.View"
        mc:Ignorable="d"
        Title="Loading Scene" Height="120" Width="250"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Loading..."
                   Name="LoadingTextBlock"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <Button Grid.Row="1" Name="CancelLoadButton"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="Cancel_Click">Cancel</Button>
    </Grid>
</Window>
