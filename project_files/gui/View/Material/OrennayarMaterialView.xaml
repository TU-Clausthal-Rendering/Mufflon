<UserControl x:Class="gui.View.Material.OrennayarMaterialView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gui.View.Material"
             xmlns:helper="clr-namespace:gui.View.Helper"
             mc:Ignorable="d" 
             d:DesignHeight="150" 
             d:DesignWidth="160">
    <GroupBox>
        <GroupBox.Header>
            <TextBox 
                Width="100"
                Text="{Binding Name}"/>
        </GroupBox.Header>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Column="0"
                Grid.Row="0"
                Text="Type:"
                Margin="{StaticResource LeftPropertyMargin}"/>
            <TextBlock
                Grid.Column="1"
                Grid.Row="0"
                Text="{Binding Type}"
                Margin="{StaticResource RightPropertyMargin}"/>

            <ComboBox 
                Grid.Column="0"
                Grid.Row="1"
                Width="68"
                SelectedIndex="{Binding SelectedAlbedo, FallbackValue=0}"
                Margin="{StaticResource LeftPropertyMargin}">
                <ComboBoxItem Content="Albedo RGB"/>
                <ComboBoxItem Content="Albedo Texture"/>
            </ComboBox>

            <!-- RGB Grid -->
            <Grid
                Grid.Column="1"
                Grid.Row="1"
                Margin="{StaticResource RightPropertyMargin}"
                Visibility="{Binding AlbedoVisibility, FallbackValue=Visible}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <helper:EnterTextBox
                    Grid.Column="0"
                    Text="{Binding AlbedoX}"/>
                <helper:EnterTextBox
                    Grid.Column="1"
                    Text="{Binding AlbedoY}"/>
                <helper:EnterTextBox
                    Grid.Column="2"
                    Text="{Binding AlbedoZ}"/>
            </Grid>

            <!-- Texture Grid -->
            <Grid
                Grid.Column="1"
                Grid.Row="1"
                Margin="{StaticResource RightPropertyMargin}"
                Visibility="{Binding AlbedoTexVisibility, FallbackValue=Hidden}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox
                    Grid.Column="0"
                    Text="{Binding AlbedoTex}"
                    Margin="0 0 1 0"/>
                <Button
                    Grid.Column="1"
                    VerticalContentAlignment="Center"
                    HorizontalAlignment="Center"
                    Command="{Binding SelectAlbedoCommand}">
                    <Image
                        Source="../../Icons/open.png"/>
                </Button>
            </Grid>

            <TextBlock 
                Grid.Column="0"
                Grid.Row="2"
                Text="Roughness:"
                Margin="{StaticResource LeftPropertyMargin}"/>
            <TextBox
                Grid.Column="1"
                Grid.Row="2"
                Text="{Binding Roughness}"
                Margin="{StaticResource RightPropertyMargin}"/>

        </Grid>
    </GroupBox>
</UserControl>
