                        GroupName="RadioCamera"
                        Margin="{StaticResource LeftPropertyMargin}"
                        IsChecked="{Binding IsSelected}"/>

                    <TextBox 
                        Grid.Column="1"
                        HorizontalContentAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        MinWidth="80"
                        Text="{Binding Name}"/>
                </Grid>

                <Button
                    DockPanel.Dock="Right"
                    Margin="10 0 5 0">
                    <Image 
                        Source="../../Icons/cancel.png"
