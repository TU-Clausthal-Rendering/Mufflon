<UserControl x:Class="gui.View.Camera.FocusCameraView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gui.View.Camera"
             xmlns:helper="clr-namespace:gui.View.Helper"
             mc:Ignorable="d" 
             d:DesignHeight="200" 
             d:DesignWidth="160">
    <GroupBox>
        <GroupBox.Header>
            <StackPanel Orientation="Horizontal">
                <RadioButton
                    GroupName="RadioCamera"
                    Margin="{StaticResource LeftPropertyMargin}"
                    IsChecked="{Binding IsSelected}"/>

                <TextBox 
                    Width="100"
                    Text="{Binding Name}"/>
            </StackPanel>
        </GroupBox.Header>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Column="0"
                Grid.Row="0"
                Text="Type:"
                Margin="{StaticResource LeftPropertyMargin}"/>
            <TextBlock
                Grid.Column="1"
                Grid.Row="0"
                Text="{Binding Type}"
                Margin="{StaticResource RightPropertyMargin}"/>

            <TextBlock
                Grid.Column="0"
                Grid.Row="1"
                Text="Focal Length:"
                Margin="{StaticResource LeftPropertyMargin}"/>
            <helper:EnterTextBox
                Grid.Column="1"
                Grid.Row="1"
                Margin="{StaticResource RightPropertyMargin}"
                Text="{Binding FocalLength}"/>

            <TextBlock
                Grid.Column="0"
                Grid.Row="2"
                Text="Chip Height:"
                Margin="{StaticResource LeftPropertyMargin}"/>
            <helper:EnterTextBox
                Grid.Column="1"
                Grid.Row="2"
                Margin="{StaticResource RightPropertyMargin}"
                Text="{Binding ChipHeight}"/>

            <TextBlock
                Grid.Column="0"
                Grid.Row="3"
                Text="Focus Distance:"
                Margin="{StaticResource LeftPropertyMargin}"/>
            <helper:EnterTextBox
                Grid.Column="1"
                Grid.Row="3"
                Margin="{StaticResource RightPropertyMargin}"
                Text="{Binding FocusDistance}"/>

            <TextBlock
                Grid.Column="0"
                Grid.Row="4"
                Text="Aperture:"
                Margin="{StaticResource LeftPropertyMargin}"/>
            <helper:EnterTextBox
                Grid.Column="1"
                Grid.Row="4"
                Margin="{StaticResource RightPropertyMargin}"
                Text="{Binding Aperture}"/>
        </Grid>
    </GroupBox>
</UserControl>
